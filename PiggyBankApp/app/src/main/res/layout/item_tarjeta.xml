<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="105dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTarjetas"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgTarjeta"
                android:layout_width="48dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_active_card"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_active_card" />

            <TextView
                android:id="@+id/tvStatusTarjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:text="Activa"
                android:textColor="@color/turquoise"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tvSaldoTarjeta"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imgTarjeta"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvNumTarjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="4dp"
                android:text="1234 5678 9000 1234"
                android:textColor="@color/blue_navy"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imgTarjeta"
                app:layout_constraintTop_toBottomOf="@+id/tvStatusTarjeta" />

            <TextView
                android:id="@+id/tvNombreTarjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="4dp"
                android:text="Berenice Garcia Lopez"
                android:textColor="@color/blue_navy"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/imgTarjeta"
                app:layout_constraintTop_toBottomOf="@+id/tvNumTarjeta" />

            <TextView
                android:id="@+id/tvTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="4dp"
                android:text="Debito"
                android:textColor="@color/blue_navy"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/imgTarjeta"
                app:layout_constraintTop_toBottomOf="@+id/tvNombreTarjeta" />

            <TextView
                android:id="@+id/tvSaldoTarjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:text="$1,000.00"
                android:textColor="@color/blue_navy"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>